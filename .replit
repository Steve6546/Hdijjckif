modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[deployment]
deploymentTarget = "autoscale"
run = ["sh", "-c", "streamlit run streamlit_interface.py --server.address 0.0.0.0 --server.port 5000 --server.headless true"]

[workflows]
runButton = "Start BrainOS Server"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "AI Orchestration Server"

[[workflows.workflow]]
name = "AI Orchestration Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run app.py --server.port 5000"
waitForPort = 5000

[[workflows.workflow]]
name = "Start BrainOS Server"
author = 41517790
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run streamlit_interface.py --server.address 0.0.0.0 --server.port 5000 --server.headless true --server.enableCORS true --server.enableXsrfProtection false --server.enableWebsocketCompression false"

[[ports]]
localPort = 5000
externalPort = 5000
